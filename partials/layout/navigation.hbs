        <div class="flex items-center justify-between py-4">
            <div class="flex items-center gap-6">
                <div
                    class="pr-6 border-r border-transparent lg:border-green-800"
                >
                        {{> logo }}
                </div>
                <ul class="hidden lg:flex items-center gap-8">
                  {{#foreach navigation}}
